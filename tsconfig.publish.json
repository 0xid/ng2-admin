{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./lib",
    "rootDir": "./build",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "stripInternal": true,
    "baseUrl": ".",
    "paths": {
      "@angular/core": ["node_modules/@angular/core"]
    },
    "skipLibCheck": true
  },
  "include": [
    "./build/**/*"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "./compiled",
    "debug": true
  }
}
